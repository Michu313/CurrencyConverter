<Window x:Class="CurrencyConverter.StatisticCurrency"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyConverter"
        mc:Ignorable="d"
        Title="StatisticCurrency" Height="450" Width="600">
    <Grid>
        <Button x:Name="backButton" Content="Wstecz" HorizontalAlignment="Left" Margin="21,377,0,0" VerticalAlignment="Top" Width="75" Click="BackButton_Click"/>
        <ListView x:Name="listView" Margin="26,10,49,63" MinWidth="520" MaxWidth="560">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Date}" Header="Data" Width="100"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding UsdCourse}" Header="Kurs USD" Width="100"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding EurCourse}" Header="Kurs EUR" Width="100"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding GbpCourse}" Header="Kurs GBP" Width="100"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding ChfCourse}" Header="Kurs CHF" Width="100"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
